{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es6", "dom", "es2017"],
    "sourceMap": true,
    "moduleResolution": "node",
    "strict": true,
    "target": "esnext",
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    },
    "sourceRoot": "./src"
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
